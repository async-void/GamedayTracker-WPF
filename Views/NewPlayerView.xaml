<UserControl
    x:Class="GamedayTracker.Views.NewPlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GamedayTracker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="400"
    Height="340"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1"
                   Grid.Row="0" 
                   Text="Add New Player"
                   Foreground="{DynamicResource GreenColorBrush}"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="6"
                                  ShadowDepth="2"
                                  Direction="-90"
                                  Color="Black"
                                  Opacity=".5"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}" 
                 Grid.Column="1"
                 Grid.Row="1"
                 md:HintAssist.Hint="Player Name"
                 Foreground="{DynamicResource GreenColorBrush}"/>
        <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}" 
                 Grid.Column="1"
                 Grid.Row="2"
                 md:HintAssist.Hint="Company Name"
                 Foreground="{DynamicResource GreenColorBrush}"/>
    </Grid>
</UserControl>
