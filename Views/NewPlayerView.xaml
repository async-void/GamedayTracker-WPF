<UserControl
    x:Class="GamedayTracker.Views.NewPlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GamedayTracker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="400"
    Height="340"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Orientation="Horizontal">

            <!--#region BACK BUTTON-->
            <Button
                Grid.Column="1"
                Width="30"
                Height="30"
                Padding="0"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding NavigateBackCommand}">
                <md:PackIcon
                    Width="30"
                    Height="30"
                    Foreground="{DynamicResource GreenColorBrush}"
                    Kind="ArrowBack" />
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4"
                                      ShadowDepth="2"
                                      Direction="-90"
                                      Color="Black"
                                      Opacity=".7"/>
                </Button.Effect>
            </Button>
            <!--#endregion-->

            <TextBlock
                Margin="74,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{DynamicResource GreenColorBrush}"
                Text="Add New Player">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="6"
                        Direction="-90"
                        Opacity=".5"
                        ShadowDepth="2"
                        Color="Black" />
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            md:HintAssist.Hint="Player Name"
            Foreground="{DynamicResource GreenColorBrush}"
            Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            md:HintAssist.Hint="Company Name"
            Foreground="{DynamicResource GreenColorBrush}"
            Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />

        <!-- #region COMMAND BUTTONS -->
        <StackPanel Grid.Column="1"
                    Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Width="46"
                    Height="36"
                    Background="{DynamicResource PrimaryToSecondaryGradientBrush}"
                    BorderBrush="Transparent"
                    Padding="0"
                    Command="{Binding SavePlayerCommand}">
                <md:PackIcon Kind="ContentSave" 
                             Width="30"
                             Height="30"
                             Foreground="{DynamicResource GreenToLiteGreenGradientBrush}"/>
            </Button>
            <Button Width="46"
                    Height="36"
                    Background="{DynamicResource PrimaryToSecondaryGradientBrush}"
                    BorderBrush="Transparent"
                    Padding="0"
                    Margin="5"
                    Command="{Binding CancelCommand}">
                <md:PackIcon Kind="CancelBold" 
                             Width="30"
                             Height="30"
                             Foreground="{DynamicResource LightRedToLightOrangeGradientBrush}"/>
            </Button>
        </StackPanel>
        <!-- #region -->

    </Grid>
</UserControl>
